// Farklı veri türlerinin farklı değişkenlerini bildirme
let ad = 'Ahmet' // Kişinin adı
let soyad = 'Mehmet' // Kişinin soyadı
let ulke = 'Turkey' // Ülke
let sehir = 'Ankara' // Başkent
let yas = 100 // yıl cinsinden yaş
let evli = true // true = evli false = evli değil

// Değişkenleri sayı değerleriyle bildirme
const yerCekimi = 9.81 // m/s2 cinsinden yer çekimi
const kaynamaNoktası = 100 // suyun kaynama noktası, oC cinsinden sıcaklık
const PI = 3.14 // sabit geometri

// Değişkenler ayrıca virgülle ayrılmış bir satırda bildirilebilir.
let isim = 'Ahmet', //Kişinin ismi
  is = 'ogretmen', //kişinin yaptığı iş
  neredeYasiyor = 'Turkey'//yaşadığı ülke
